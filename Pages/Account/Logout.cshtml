@page
@model LogoutModel

<div class="flex flex-col justify-center items-center bg-gray-50 mt-10 py-10 rounded-sm border border-green-100 shadow-lg">
    <div>
        <h1 class="text-3xl font-bold mb-10">You are logged out.</h1>
    </div>
    <div>
        <a asp-page="Login" class="bg-green-200 py-2 px-2 text-lg rounded-lg shadow-lg hover:shadow-xl hover:bg-green-300">Log back in</a>
    </div>
</div>

@functions {
    public class LogoutModel: PageModel
    {
        private SignInManager<IdentityUser> signInManager;
        public LogoutModel(SignInManager<IdentityUser> signInMgr)
        {
            signInManager = signInMgr;
        }

        public async Task OnGetAsync()
        {
            await signInManager.SignOutAsync();
        }
    }
}