@model IQueryable<Budget>

<div class="shadow-2xl px-2 pt-2 pb-5 rounded-md bg-gray-200 text-black">
    <div class="m-2 shadow-lg rounded-md font-bold text-gray-900 text-4xl flex justify-center py-4 bg-indigo-400">
        <h1>Your Budget List</h1>
    </div>
    <div class="m-2 shadow-lg hover:bg-indigo-400 rounded-md font-bold text-gray-900 text-xl flex justify-center bg-indigo-300">
        <a class="text-center py-2 w-full h-full" asp-controller="Budget" asp-action="Create">Create Budget</a>
    </div>
    <div class="grid gap-3 auto-rows-auto grid-cols-1 md:grid-cols-3">
    @foreach (Budget b in Model)
    {
        <div class="rounded-md p-3 grid m-2 -mb-2 bg-indigo-100 shadow-md border-gray-400">
            <div class="flex flex-col justify-between">
                <div class="flex-1">
                    <div class="flex">
                        <a asp-controller="Budget" asp-action="Details" asp-route-id="@b.BudgetId" class="text-xl text-gray-900 font-bold">@b.Description</a>
                    </div>
                    <div class="mb-2">
                        <a asp-controller="Budget" asp-action="Edit" asp-route-id="@b.BudgetId" class="mr-1 text-yellow-500 hover:text-yellow-700">Edit</a>
                        <a asp-controller="Budget" asp-action="Delete" asp-route-id="@b.BudgetId" class="text-red-500 hover:text-red-700">Delete</a>
                    </div>
                </div>
                <div class="flex-1">
                    <h1 class="text-lg font-bold text-left">Balance: @(b.IncomeItems.Sum(ii => ii.Amount) - b.ExpenseItems.Sum(ei => ei.Amount))</h1>
                    <p class="text-left"></p>
                </div>
                <div class="flex-1">
                    <h1 class="text-lg font-bold text-left">Expenses: @b.ExpenseItems.Sum(ei => ei.Amount)</h1>
                    <p class="text-left"></p>
                </div>
                <div class="flex-1">
                    <h1 class="text-lg font-bold text-left">Income: @b.IncomeItems.Sum(ii => ii.Amount)</h1>
                    <p class="text-left"></p>
                </div>
            </div>
            <div class="-mx-3 -mb-3 rounded-b-md grid bg-indigo-300 shadow-md hover:bg-indigo-400 text-center">
                <a asp-controller="Budget" asp-action="BudgetBreakdown" asp-route-id="@b.BudgetId" class="h-full p-1">See @b.Description Breakdown</a>
            </div>
        </div>
        
    }
    </div>
</div>



