@model IQueryable<Budget>

<div class="shadow-2xl mx-5 rounded-md bg-gray-100 text-black flex flex-col justify-center center">
    <div class="m-2 shadow-lg rounded-md font-bold text-gray-900 text-4xl flex justify-center py-4 bg-indigo-400">
        <h1>Your Budget List</h1>
    </div>
    <div class="m-2 shadow-lg hover:bg-indigo-400 rounded-md font-bold text-gray-900 text-xl flex justify-center bg-indigo-300">
        <a class="text-center py-2 w-full h-full" asp-controller="Budget" asp-action="Create">Create Budget</a>
    </div>
    <div class="flex-col flex">
        @foreach (Budget b in Model)
        {
            <div class="rounded-md p-3 flex flex-row m-2 bg-indigo-200 shadow-md">
                <a asp-controller="Budget" asp-action="BudgetBreakdown" asp-route-id="@b.BudgetId">
                    <div class="flex flex-col flex-1">
                        <div>
                            <svg class="text-indigo-700 w-20 h-20 fill-current" viewBox="0 0 24 24">
                                <path d="M12.324 7.021l.154.345c.237-.041.52-.055.847-.025l.133.577c-.257-.032-.53-.062-.771-.012l-.092.023c-.464.123-.316.565.098.672.682.158 1.494.208 1.815.922.258.578-.041.973-.541 1.163l.154.346-.325.068-.147-.329c-.338.061-.725.053-1.08-.041l-.1-.584c.294.046.658.087.938.03l.186-.06c.333-.165.231-.582-.264-.681-.367-.083-1.342-.021-1.705-.831-.205-.458-.053-.936.535-1.154l-.161-.361.326-.068m3.82 1.614c-.706-1.648-2.681-2.751-4.409-2.463-1.728.288-2.557 1.857-1.85 3.506.746 1.739 2.888 2.853 4.651 2.414 1.562-.388 2.28-1.887 1.608-3.457zm4.05-5.635l3.766 8.233c-5.433 4.223-12.654-.038-17.951 4.461l-3.766-8.233c4.944-4.779 11.773-.45 17.951-4.461zm3.806 12.014c-6.857 3.939-12.399-1.424-19.5 5.986l-4.5-9.964 1.402-1.462 3.807 8.401-.002.008c7.445-5.592 11.195-1.175 18.109-4.561.294.647.565 1.33.684 1.592z"/>
                            </svg>
                            <p class="text-xl font-bold">@b.Description</p>
                        </div>
                        <div>
                            <a asp-controller="Budget" asp-action="Edit" asp-route-id="@b.BudgetId">Edit</a>
                            <a asp-controller="Budget" asp-action="Delete" asp-route-id="@b.BudgetId">Delete</a>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h1>@b.IncomeItems.Sum(ii => ii.Amount)</h1>
                    </div>
                    <div>
                        <h1>@b.ExpenseItems.Sum(ei => ei.Amount)</h1>
                    </div>
                    <div>
                        <h1>@(b.IncomeItems.Sum(ii => ii.Amount) - b.ExpenseItems.Sum(ei => ei.Amount))</h1>
                    </div>
                </a>
            </div>
           
        }
    </div>
</div>

<div class="flex justify-content-center ">
    <h1 class="text-white">Here is your budget list!</h1>
</div>



<div class="grid grid-cols-4 gap-4 text-white">
    <div><h1>Budget</h1></div>
    <div><h1>Income</h1></div>
    <div><h1>Expense</h1></div>
    <div><h1>Available</h1></div>
</div>



<div class="grid grid-cols-4 gap-4 text-white">
    
</div>



